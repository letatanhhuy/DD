<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="@dimen/progress_bar_height"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/imageRestaurantCoverDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".25"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimaryDark"
        android:contentDescription="@string/content_description_cover_image_for_restaurant" />

    <TextView
        android:id="@+id/txtRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@+id/imageRestaurantCoverDetails"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Name can very very very very very very very very very very very very very very long"
        />

    <TextView
        android:id="@+id/txtRestaurantDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txtRestaurantName"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description can very very very very very very very very very very very very very very long"
        />

    <TextView
        android:id="@+id/txtRestaurantStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtRestaurantDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        tools:text="status can very very very very very very very very very very very very very very long"
        />

    <TextView
        android:id="@+id/txtRestaurantFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtRestaurantStatus"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Fee delivery can very very very very very very very very very very very very very very long"
        />
</androidx.constraintlayout.widget.ConstraintLayout>